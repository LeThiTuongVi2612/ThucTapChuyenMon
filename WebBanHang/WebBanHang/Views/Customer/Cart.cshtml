
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Cart.cshtml";
}

<div class="content">
    <div class="content1">
        <div class="content1-1">
            <a href="~/Home/Cart">
                <div class="viewcart">
                    <img src="~/Content/Cart/images/cart.png" alt="view-cart">
                    <p>View Cart</p>
                </div>
            </a>
            <a href="#">
                <div class="checkout">
                    <img src="~/Content/Cart/images/check.png" alt="check-items">
                    <p>Check Items</p>
                </div>
            </a>

            <div class="clear"></div>
        </div>
        <div class="content1-3">


            <a href="~/Home/index">
                <div class="cancel">

                    <p>Cancel</p>
                </div>
            </a>
            <div class="clear"></div>
        </div>
        <div class="content1-2">
            <div class="content-header">
                <h1>My Cart</h1>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="content2">
        <div class="line1">
            <h2>Placing Order</h2>
        </div>
        <div class="line2">
            <div class="line-info">
                <img src="~/Content/Cart/images/shirts.jpg" alt="shirts" class="item">
            </div>
            <div class="line-info">
                <p>Pants And Shirts</p>
            </div>
            <div class="line-info">
                <p>2 &times; 120$</p>
            </div>
            <div class="alert-close1"><img src="~/Content/Cart/images/close.png" alt="close"></div>
            <div class="clear"></div>
        </div>
        <div class="line3">
            <div class="line-info">
                <img src="~/Content/Cart/images/shoes.jpg" alt="shoes" class="item">
            </div>
            <div class="line-info">
                <p>Shoes</p>
            </div>
            <div class="line-info">
                <p>1 &times; 99$</p>
            </div>
            <div class="alert-close2"><img src="~/Content/Cart/images/close.png" alt="close"></div>
            <div class="clear"></div>
        </div>
        <div class="line4">
            <div class="line-info">
                <img src="~/Content/Cart/images/belt.jpg" alt="belts" class="item">
            </div>
            <div class="line-info">
                <p>Belts</p>
            </div>
            <div class="line-info">
                <p>1 &times; 14$</p>
            </div>
            <div class="alert-close3"><img src="~/Content/Cart/images/close.png" alt="close"></div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="content3">
        <input type="submit" value="Place Order">
        <p>Total 233$</p>
    </div>
</div>

