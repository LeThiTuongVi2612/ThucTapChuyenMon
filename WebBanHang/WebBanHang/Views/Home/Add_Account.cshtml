@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc
@using WebBanHang.Models
@model Users
@{
    ViewBag.Title = "Add_Account";
    Layout = "~/Views/Shared/layout.cshtml";
}
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-4 py-md-3">
            <h2 class="title">TẠO TÀI KHOẢN</h2>
        </div>
    </div>
</section>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap p-0">
                    <h4 style="color:red">@ViewBag.ThongBao</h4>
                    <br />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "signin-form" })
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control", @placeholder = "HoTen", @required = "required" })
                            @Html.ValidationMessageFor(model => model.HoTen)
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Phone", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Phone)
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Address", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Address)

                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.email, new { @class = "form-control", @placeholder = "Email", @required = "required" })
                            @Html.ValidationMessageFor(model => model.email)
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.passWord, new { @class = "form-control", @placeholder = "PassWord", @id = "password-field", @required = "required" })
                            @Html.ValidationMessageFor(model => model.passWord)
                            
                        </div>
                        <div class="form-group">
                            @Html.MathCaptcha()
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary submit px-3">Sign Up</button>
                        </div>
                        <div class="form-group d-md-flex">
                            
                                <font _mstmutation="1" style="color: black">
                                    Have already an account ?<a href="~/Home/login" style="color: #000000" _mstmutation="1" class="gachchan"><u>Login here</u></a>
                                </font>



                           
                        </div>
                    }


                </div>
            </div>

        </div>
        
    </div>
</section>

