
@using WebBanHang.Models;
@model IEnumerable<Company>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
    //Khởi tạo control webGrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}

<div style="padding: 10px;">
    <a href="@Url.Content("~/QuanLyNCC/TaoMoi")" class="btn btn-success">Thêm mới nhà cung cấp</a>

</div>
@*Thể hiện dữ liệu thông qua control webGrid *@
@grid.GetHtml(
tableStyle: "gridTable",
headerStyle: "gridHear",
footerStyle: "gridFooter",
rowStyle: "gridRow",
alternatingRowStyle: "gridAltRow",
columns: grid.Columns(
   grid.Column("CompanyID", "Mã nhà cung cấp"),
   grid.Column("TenCongTy", "Tên nhà cung cấp"),
   grid.Column("diachi", "Địa chỉ"),
   grid.Column("SDT", "Số điện thoại"),
  

   grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = p.CompanyID })),
   grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.CompanyID }))
   )
   )
<style>
    .gridTable {
        width: 100%;
        border: 1px solid #999999;
    }

        .gridTable td {
        }

    .gridHear {
        background-color: forestgreen;
    }

        .gridHear > th > a {
            color: #fff;
        }

    .gridFooter {
        font-weight: bold;
    }

    .gridRow {
        padding: 10px;
        border: 1px solid #999999;
    }

    .gridAltRow {
        padding: 10px;
        border: 1px solid #999999;
    }
</style>

<style>
    .charts {
        display: none;
    }
</style>





