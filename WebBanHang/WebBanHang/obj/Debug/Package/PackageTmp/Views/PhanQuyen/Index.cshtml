
@using WebBanHang.Models;
@model IEnumerable<LoaiThanhVien>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Admin.cshtml";
    //Khởi tạo control webGrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}

<div style="padding: 10px;">
    <a href="@Url.Content("~/PhanQuyen/TaoMoi")" class="btn btn-success">Thêm mới loại thành viên</a>

</div>
@*Thể hiện dữ liệu thông qua control webGrid *@
@grid.GetHtml(
tableStyle: "gridTable",
headerStyle: "gridHear",
footerStyle: "gridFooter",
rowStyle: "gridRow",
alternatingRowStyle: "gridAltRow",
columns: grid.Columns(
   grid.Column("MaLoaiTV", "Mã loại thành viên"),
   grid.Column("TenLoaiTV", "Tên loại thành viên"),
   grid.Column("UuDai", "Ưu đãi"),
   grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = p.MaLoaiTV })),
   grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.MaLoaiTV })),
   grid.Column(format: p => @Html.ActionLink("Phân quyền", "PhanQuyen", new { id = p.MaLoaiTV }))
   

   )
   )
<style>
    .gridTable {
        width: 100%;
        border: 1px solid #999999;
    }

        .gridTable td {
        }

    .gridHear {
        background-color: forestgreen;
    }

        .gridHear > th > a {
            color: #fff;
        }

    .gridFooter {
        font-weight: bold;
    }

    .gridRow {
        padding: 10px;
        border: 1px solid #999999;
    }

    .gridAltRow {
        padding: 10px;
        border: 1px solid #999999;
    }
</style>

<style>
    .charts {
        display: none;
    }

    .widget-shadow {
        display: none;
    }
</style>



